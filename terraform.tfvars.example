# Exemple de configuration Terraform
# Copiez ce fichier en terraform.tfvars et remplissez vos valeurs

project_id   = "your-gcp-project-id"
region       = "europe-west1"
default_zone = "europe-west1-b"

# Réseau (utilisez "default" ou votre VPC personnalisé)
network_name = "default"
subnet_name  = "default"

# Service account (null = utilise le service account par défaut)
service_account_email = null

# Instances Workbench à créer
notebook_instances = {
  "data-scientist-alice" = {
    owner                = "alice@company.com"
    machine_type         = "e2-standard-2"
    idle_timeout_seconds = 3600  # 1 heure
  }

  # Décommentez pour ajouter d'autres instances
  # "data-scientist-bob" = {
  #   owner                = "bob@company.com"
  #   machine_type         = "n1-standard-4"
  #   idle_timeout_seconds = 7200  # 2 heures
  # }
}

# Labels pour suivi des coûts
common_labels = {
  team        = "data-science"
  cost_center = "research"
  environment = "dev"
  managed_by  = "terraform"
}
